     		if((l.getTileByPixel(getPosX()+wert3,getPosY()+wert1)==2)||(l.getTileByPixel(getPosX()+wert3,getPosY()+wert1)==1)){
     	    	return;}else
     		posX+=wert3;posY+=wert1;return;}
     	
